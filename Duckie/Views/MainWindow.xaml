<Window x:Class="Duckie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Duckie.Views"
        mc:Ignorable="d"
        Title="Duckie" Height="600" Width="1000"
        Loaded="Window_Loaded">
    <DockPanel>
        <!-- Top menu bar -->
        <Menu DockPanel.Dock="Top" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1">
            <MenuItem Header="_Functions">
                <MenuItem x:Name="MenuImageProcessing" Header="Image Processing" Click="MenuImageProcessing_Click" IsChecked="True"/>
                <MenuItem x:Name="MenuPacManagement" Header="PAC Management" Click="MenuPacManagement_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- 主内容区域 -->
        <Grid>
            <!-- 图像处理区域 -->
            <local:ImageView x:Name="ImageViewControl" Margin="10" Visibility="Visible"/>

            <!-- PAC管理区域 -->
            <local:PacManageView x:Name="PacManageViewControl" Margin="10" Visibility="Collapsed"/>
        </Grid>
    </DockPanel>
</Window>
