<UserControl x:Class="Duckie.Views.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Duckie.Views"
             xmlns:common="clr-namespace:Duckie.Views.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             AllowDrop="True"
             Drop="ImageView_Drop"
             DragEnter="ImageView_DragEnter"
             DragLeave="ImageView_DragLeave">
    <UserControl.Resources>
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="BorderBrush" Value="#ADB5BD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="BorderBrush" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                                <Setter Property="BorderBrush" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="BorderBrush" Value="#DEE2E6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <!-- Modern Toolbar -->
        <Border DockPanel.Dock="Top" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- File Operations -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Open" Click="ButtonOpen_Click"
                            Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Export ICO" Click="ButtonSave_Click"
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>

                <!-- Edit Tools -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Transform Group -->
                    <Border Background="White" CornerRadius="6" Padding="8,4" Margin="0,0,15,0"
                            BorderBrush="#DEE2E6" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Transform" FontSize="11" Foreground="#6C757D"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>

                            <!-- B 270° Counter-clockwise (Left) -->
                            <Button Click="ButtonRotate270_Click" Style="{StaticResource ToolButtonStyle}"
                                    ToolTip="Rotate 90° Counter-clockwise" Margin="0,0,4,0">
                                <Canvas Width="20" Height="20">
                                    <Path Data="M10,16 A6,6 0 1,0 4,10 L6,10 A4,4 0 1,1 10,14 Z" Fill="#495057" />
                                    <Path Data="M3,8 L5,10 L3,12" Stroke="#495057" StrokeThickness="1.5" Fill="#495057" />
                                </Canvas>
                            </Button>

                            <!-- Rotate 90° Clockwise (Right) -->
                            <Button Click="ButtonRotate90_Click" Style="{StaticResource ToolButtonStyle}"
                                    ToolTip="Rotate 90° Clockwise" Margin="0,0,8,0">
                                <Canvas Width="20" Height="20">
                                    <Path Data="M10,16 A6,6 0 1,1 16,10 L14,10 A4,4 0 1,0 10,14 Z" Fill="#495057" />
                                    <Path Data="M17,12 L15,10 L17,8" Stroke="#495057" StrokeThickness="1.5" Fill="#495057" />
                                </Canvas>
                            </Button>

                            <!-- Flip Horizontal -->
                            <Button Click="ButtonFlipH_Click" Style="{StaticResource ToolButtonStyle}"
                                    ToolTip="Flip Horizontal" Margin="0,0,4,0">
                                <Canvas Width="20" Height="20">
                                    <Rectangle Canvas.Left="3" Canvas.Top="6" Width="5" Height="8" Fill="#495057" />
                                    <Rectangle Canvas.Left="12" Canvas.Top="6" Width="5" Height="8" Fill="#ADB5BD" />
                                    <Line X1="10" Y1="4" X2="10" Y2="16" Stroke="#6C757D" StrokeThickness="1" StrokeDashArray="2,2" />
                                </Canvas>
                            </Button>

                            <!-- Flip Vertical -->
                            <Button Click="ButtonFlipV_Click" Style="{StaticResource ToolButtonStyle}"
                                    ToolTip="Flip Vertical">
                                <Canvas Width="20" Height="20">
                                    <Rectangle Canvas.Left="6" Canvas.Top="3" Width="8" Height="5" Fill="#495057" />
                                    <Rectangle Canvas.Left="6" Canvas.Top="12" Width="8" Height="5" Fill="#ADB5BD" />
                                    <Line X1="4" Y1="10" X2="16" Y2="10" Stroke="#6C757D" StrokeThickness="1" StrokeDashArray="2,2" />
                                </Canvas>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Zoom Group -->
                    <Border Background="White" CornerRadius="6" Padding="8,4"
                            BorderBrush="#DEE2E6" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Zoom" FontSize="11" Foreground="#6C757D"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>

                            <Button Click="ButtonZoomOut_Click" Style="{StaticResource ToolButtonStyle}"
                                    ToolTip="Zoom Out" Margin="0,0,4,0">
                                <Canvas Width="20" Height="20">
                                    <Ellipse Canvas.Left="4" Canvas.Top="4" Width="12" Height="12"
                                             Stroke="#495057" StrokeThickness="1.5" Fill="Transparent" />
                                    <Line X1="7" Y1="10" X2="13" Y2="10" Stroke="#495057" StrokeThickness="1.5" />
                                </Canvas>
                            </Button>

                            <Slider x:Name="ZoomSlider" Width="80" Minimum="0.1" Maximum="3.0" Value="1.0"
                                    VerticalAlignment="Center" Margin="0,0,4,0" ValueChanged="ZoomSlider_ValueChanged" />

                            <Button Click="ButtonZoomIn_Click" Style="{StaticResource ToolButtonStyle}"
                                    ToolTip="Zoom In" Margin="0,0,8,0">
                                <Canvas Width="20" Height="20">
                                    <Ellipse Canvas.Left="4" Canvas.Top="4" Width="12" Height="12"
                                             Stroke="#495057" StrokeThickness="1.5" Fill="Transparent" />
                                    <Line X1="7" Y1="10" X2="13" Y2="10" Stroke="#495057" StrokeThickness="1.5" />
                                    <Line X1="10" Y1="7" X2="10" Y2="13" Stroke="#495057" StrokeThickness="1.5" />
                                </Canvas>
                            </Button>

                            <Button Click="ButtonZoomFit_Click" Style="{StaticResource ToolButtonStyle}"
                                    ToolTip="Fit to Window">
                                <Canvas Width="20" Height="20">
                                    <Rectangle Canvas.Left="4" Canvas.Top="4" Width="12" Height="12"
                                               Stroke="#495057" StrokeThickness="1.5" Fill="Transparent" />
                                    <Rectangle Canvas.Left="6" Canvas.Top="6" Width="8" Height="8" Fill="#ADB5BD" />
                                </Canvas>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        <StatusBar DockPanel.Dock="Bottom" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="ImageInfoText" Text="" />
            </StatusBarItem>
        </StatusBar>
        <DockPanel>
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="#FFEEEEEE">
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,20,20" />
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                    <GeometryDrawing Brush="#FFDDDDDD">
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,10,10" />
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                    <GeometryDrawing Brush="#FFDDDDDD">
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="10,10,10,10" />
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <common:ScrollViewerEx>
                    <Image x:Name="image" />
                </common:ScrollViewerEx>
            </Grid>
        </DockPanel>
    </DockPanel>
</UserControl>
